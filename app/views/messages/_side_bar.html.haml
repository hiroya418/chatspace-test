
.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__username
        = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__edit-bar__user
          =link_to""do
            =icon('fas','edit')
        %li.side-header__box__new-group
          =link_to"groups/new"do
            =icon('fas','cog')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__group-name
            = group.name
          .group__latest-message
            = group.show_last_message

